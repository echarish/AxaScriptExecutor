<div class="container-fluid">
    <div class="row">
        <div class="col-md-12"  >

            <div class="col-md-6 col-md-offset-3" style="padding:20px">
            <%include errorDiv.ejs%>
            <form role="form" style="margin-bottom:20px" id="registerServerForm" method="post">
                <h2 class="alert alert-info blackiconcolor">Register new server</h2>
                <hr class="colorgraph">
                <div class="form-group">
                    <input required  type="text" name="server_name" id="server_name" class="form-control input-lg" placeholder="Server Name" tabindex="3">
                </div>
                <div class="form-group">
                    <input required  type="text" name="project_name" id="project_name" class="form-control input-lg" placeholder="Project Name" tabindex="3">
                </div>
                <div class="form-group">
                    <input required  type="text" name="ip_address" id="ip_address" class="form-control input-lg" placeholder="Server IP Address" tabindex="3">
                </div>
                <div class="form-group">
                    <input required  type="text" name="port_number" id="port_number" class="form-control input-lg" placeholder="Server Port" tabindex="3" value="22" >
                </div>
                <div class="form-group">
                    <input required  type="text" name="server_user" id="server_user" class="form-control input-lg" placeholder="Server User Id" tabindex="3">
                </div>
                <div class="form-group">
                    <input required  type="password" name="server_user_password" id="server_user_password" class="form-control input-lg" placeholder="Server Password" tabindex="3">
                </div>

                <hr class="colorgraph">
                <div class="col-md-4 col-md-offset-4"><input required  type="button" onclick="addNewServerPost();" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>

            </form>

            </div>
        </div>
    </div>
</div>
