<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="col-md-6 col-md-offset-3" style="margin-bottom:20px">
                <%include errorDiv.ejs%>


                <form id="addNewShellScriptForm" role="form" style="margin-bottom:20px" >
                    <h2 class="alert alert-info blackiconcolor">Script for Server</h2>
                    <hr class="colorgraph">

                    <div class="form-group">
                        <input required  type="text" name="script_type" id="script_type" class="form-control input-lg"
                               value="<%= server_script.script_type %>"
                               placeholder="Script Type" tabindex="3">
                    </div>
                    <div class="form-group">
                        <input required  type="text" name="batch_name" id="batch_name" class="form-control input-lg"
                               value="<%= server_script.batch_name %>"
                               placeholder="Batch Name" tabindex="3">
                    </div>
                   <!-- <div class="form-group">
                        <input required  type="text" name="user_name" id="user_name" class="form-control input-lg"
                               placeholder="User Name" tabindex="3">
                    </div>-->
                    <div class="form-group">
                        <input required  type="text" name="script_name" id="script_name" class="form-control input-lg"
                               value="<%= server_script.script_name %>"
                               placeholder="Shell Script" tabindex="3">
                    </div>
                    <div class="form-group">
                         <input required  type="text" name="script_executor_id" id="script_executor_id"
                                value="<%= server_script.script_executor_id %>"
                                class="form-control input-lg" placeholder="Script Executor Id" tabindex="3">
                     </div>
                     <div class="form-group">
                         <input required  type="password" name="script_executor_password" id="script_executor_password"
                                class="form-control input-lg" placeholder="Script Executor Password" tabindex="3">
                     </div>



                    <hr class="colorgraph">
                    <div class="col-md-6 col-md-offset-3">
                        <input required  type="button" id="addNewShellScriptSubmitBtn" onclick="addNewIndShellScriptPost()"
                               value="Register Script for Server" class="btn btn-primary btn-block btn-lg" tabindex="7">
                    </div>
                    <input required  type="text" name="script_id" id="script_id" value="<%= server_script._id %>" style="display: none">
                </form>

            </div>
        </div>
    </div>
</div>
